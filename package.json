{
  "name": "real-time-inventory",
  "version": "1.0.0",
  "description": "A simple inventory tracker in real-time",
  "main": "scripts.js",
  "scripts": {
    "scss": "node-sass --output-style compressed scss/styles.scss public/styles.css",
    "autoprefixer": "postcss -u autoprefixer -r public/styles.css",
    "cleancss": "cleancss -o public/styles.css public/styles.css",
    "image": "imagemin img/* -o public/img",
    "font": "cp font/*.* public/font/",
    "html": "cp *.html public/",
    "start": "nodemon --harmony server.js",
    "es6Server": "babel es6-server.js -o server.js",
    "es6SocketEvents": "babel es6-socket-events.js -o socket-events.js",
    "es6MyScripts": "babel js/es6-myScripts.js -o js/myScripts.js",
    "merge:js": "cat js/myScripts.js js/scripts-webpack.js > public/scripts.js",
    "uglify": "uglifyjs js/scripts.js -m -c -o public/scripts.min.js",
    "build:html": "npm run html && npm run image && npm run font",
    "build:css": "npm run scss && npm run autoprefixer && npm run cleancss",
    "build:js": "npm run es6MyScripts && webpack && npm run merge:js",
    "build": "npm run build:html && npm run build:css && npm run build:js && npm run es6Server && npm run es6SocketEvents",
    "watch:html": "onchange '*.html' -- npm run build:html",
    "watch:css": "onchange 'scss/*.scss' -- npm run build:css",
    "watch:js": "onchange 'js/*.js' -- npm run build:js",
    "watch:components": "onchange 'components/*.jsx' -- webpack",
    "watch:flow": "onchange 'flow/*.js' -- webpack",
    "watch:server": "onchange 'es6-server.js' -- npm run es6Server",
    "watch:socketEvents": "onchange 'es6-socket-events.js' -- npm run es6SocketEvents",
    "watch": "parallelshell 'npm run watch:html' 'npm run watch:css' 'npm run watch:js' 'npm run watch:components' 'npm run watch:flow' 'npm run watch:server' 'npm run watch:socketEvents'",
    "begin": "npm run build && npm run watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jstrother/real-time-inventory.git"
  },
  "author": "Jim Strother",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jstrother/real-time-inventory/issues"
  },
  "homepage": "https://github.com/jstrother/real-time-inventory#readme",
  "dependencies": {
    "babel-plugin-transform-class-properties": "^6.19.0",
    "express": "^4.14.0",
    "jquery": "^3.1.1",
    "material-ui": "^0.16.6",
    "normalize-scss": "^6.0.0",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "^5.0.1",
    "react-tap-event-plugin": "^2.0.1",
    "redux": "^3.6.0",
    "redux-logger": "^2.7.4",
    "rethinkdb": "^2.3.3",
    "socket.io": "^1.7.2"
  },
  "devDependencies": {
    "autoprefixer": "^6.6.1",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "browser-sync": "^2.18.5",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "clean-css": "^3.4.23",
    "eslint": "^3.12.2",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "imagemin": "^5.2.2",
    "mocha": "^3.2.0",
    "node-sass": "^4.1.1",
    "nodemon": "^1.11.0",
    "onchange": "^3.2.1",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.6.0",
    "support-for": "^1.0.7",
    "uglify-js": "^2.7.5",
    "uglify-js-plugin": "0.0.6",
    "webpack": "^1.14.0"
  }
}
